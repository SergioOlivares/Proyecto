<%= form_for(@pedido) do |f| %>
    <% if pedido.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(pedido.errors.count, "error") %>
          </h2>
          <ul>
            <% pedido.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :tipopedido %>
      <%= f.text_field :tipopedido %>
    </div>

    <div class="field">
      <%= f.label :fecha %>
      <%= f.text_field :fecha %>
    </div>

    <div class="field">
      <%= f.label :empleado_id %>
      <%= f.text_field :empleado_id %>
    </div>

    <div class="actions">
      <%= f.submit "Crear" %>
    </div>
<% end %>