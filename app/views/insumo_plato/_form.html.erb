<%= form_for(insumo_plato) do |f| %>
    <% if insumo_plato.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(insumo_plato.errors.count, "error") %>
          </h2>
          <ul>
            <% insumo_plato.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :cantidadusada%>
      <%= f.number_field :cantidadusada %>
    </div>

    <div class="field">
      <%= f.label :unidadmedida %>
      <%= f.text_field :unidadmedida %>
    </div>

    <div class="field">
      <%= f.label :insumo_id %>
      <%= f.text_field :insumo_id %>
    </div>

    <div class="field">
      <%= f.label :plato_id %>
      <%= f.text_field :plato_id %>
    </div>

    <div class="actions">
      <%= f.submit "Crear", class:"btn be-red white" %>
    </div>
<% end %>